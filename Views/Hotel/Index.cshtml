@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" >
    <h1 class="text-center text-dark">@ViewData["Title"]</h1>
</div>


<table class="table table-bordered">
    <thead class=" thread-light">
        <tr style="color:gray ">
            
            <th >
                Hotel name
            </th>
            <th>
                Adress
            </th>
            <th>
                Phone
            </th>
            <th>
                Image
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
            <th>
                Apartment
            </th>
        </tr>
    </thead>
    <tbody>
@for (int i =0; i <Model.Rows.Count;i++) {
        <tr  style="color:gray ">
            <td>
                @Model.Rows[i]["Hotel_name"]
            </td>
            <td>
                @Model.Rows[i]["Adress"]
            </td>
            <td>
                @Model.Rows[i]["Phone"]
            </td>
            <td>
                <img src ="@Model.Rows[i]["ImagePath"]" style="width:6vw"/>
            </td>
            
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["Hotel_ID"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Hotel_ID"]">Delete</a>
                
            </td>
            <td>
                <a asp-controller="Apartment" asp-action="Index" asp-route-id="@Model.Rows[i]["Hotel_ID"]">Apartment</a>
            </td>
        </tr>
}
    </tbody>
</table>
