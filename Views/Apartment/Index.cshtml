@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Apartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" jumbotron ">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Room
            </th>
            <th>
                Class
            </th>
            <th>
                Amount_beds
            </th>
            <th>
                Price
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Room"]
                </td>
                <td>
                    @Model.Rows[i]["Class"]
                </td>
                <td>
                    @Model.Rows[i]["Amount_beds"]
                </td>
                <td>
                    @Model.Rows[i]["Price"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-idRoom="@Model.Rows[i]["Room_ID"]" asp-route-idHotel="@Model.Rows[i]["Hotel_ID"]">Edit</a> |
                    <a asp-action="Delete" asp-route-idRoom="@Model.Rows[i]["Room_ID"]" asp-route-idHotel="@Model.Rows[i]["Hotel_ID"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
